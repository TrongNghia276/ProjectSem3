@model IEnumerable<Sem3Project.Models.Medicines>
@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-4 mb-30">
        <div class="product">
            <div class="product-thumb">
                <img alt="" src="~/images/Medicines/@item.MedicineImage" class="img-responsive img-fullwidth">
                <div class="overlay"></div>
            </div>
            <div class="product-details text-center">
                <a href="#"><h5 class="product-title">@item.MedicineName</h5></a>
                @*<div class="star-rating" title="Rated 4.00 out of 5"><span data-width="80%">4.00</span></div>*@
                <div class="price"><span class="amount">@item.MedicinePrice</span></div>
                <div class="btn-add-to-cart-wrapper">
                    <a class="btn btn-default btn-xs btn-add-to-cart" href="#">Add To Cart</a>
                    <a class="btn-read-more" href="@Url.Action("Details","Medicines", new { id = item.MedicineID})">View Details</a>
                </div>
            </div>
        </div>
    </div>
}

